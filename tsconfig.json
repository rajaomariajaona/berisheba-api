{"compilerOptions": {
        "lib": [ "es5", "es6", "es7",
            "es2015", "es2016",
            "es2017", "es2018",
            "esnext" ],
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "./build",
    },
    "exclude": ["node_modules"],
    "include": ["src/"]
}